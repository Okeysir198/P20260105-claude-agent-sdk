# API Configuration
# The base URL for the Claude Agent SDK API server (REST endpoints)
# Always use production URL - never use localhost
NEXT_PUBLIC_API_URL=https://claude-agent-sdk-fastapi-sg4.tt-ai.org/api/v1
NEXT_PUBLIC_API_KEY=your-api-key

# WebSocket URL for chat streaming (optional - auto-detects by default)
# Only set this if you need to override the default behavior
# NEXT_PUBLIC_WS_URL=wss://your-domain.com/ws/chat

# Application Configuration
NEXT_PUBLIC_APP_NAME=Claude Chat UI
NEXT_PUBLIC_APP_VERSION=0.1.0

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG=false
