# API Configuration
# The base URL for the Claude Agent SDK API server (REST endpoints)
NEXT_PUBLIC_API_URL=http://localhost:7001/api/v1

# WebSocket URL for chat streaming
# In development: ws://localhost:7001/api/v1/ws/chat (direct to backend)
# In production: wss://your-domain.com/ws/chat (through reverse proxy)
# If not set, auto-detects based on hostname
NEXT_PUBLIC_WS_URL=ws://localhost:7001/api/v1/ws/chat

# Backend URL for Next.js rewrites (used by next.config.mjs)
# Only needed if using Next.js proxy rewrites instead of direct connection
BACKEND_URL=http://localhost:7001

# Application Configuration
NEXT_PUBLIC_APP_NAME=Claude Chat UI
NEXT_PUBLIC_APP_VERSION=0.1.0

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG=false
