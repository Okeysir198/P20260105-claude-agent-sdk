from enum import Enum


class PersonType(Enum):
    """Type of person in the conversation."""
    CORRECT = "correct"
    WRONG = "wrong"
    THIRD_PARTY = "third_party"


class CallOutcome(Enum):
    """Final outcome of a call session."""
    SUCCESS = "success"
    CALLBACK = "callback"
    ESCALATED = "escalated"
    ABANDONED = "abandoned"
    REFUSAL = "refusal"
