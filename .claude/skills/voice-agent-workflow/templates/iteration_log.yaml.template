# Voice Agent Workflow Iteration Log
# This file is automatically generated and updated during the workflow

# =============================================================================
# Workflow Metadata
# =============================================================================
workflow:
  agent_name: "{agent_name}"
  agent_path: "{agent_path}"
  started_at: "{start_timestamp}"
  completed_at: null
  status: "in_progress"  # in_progress, success, plateau, regression, max_iterations

# =============================================================================
# Configuration Used
# =============================================================================
config:
  target_success_rate: 0.90
  max_iterations: 3
  min_improvement: 0.02
  rollback_on_regression: true

# =============================================================================
# Test Suite Info
# =============================================================================
test_suite:
  total_tests: 0
  tests_by_agent:
    # greeting: 5
    # verification: 8
    # resolution: 6
  e2e_tests: 0

# =============================================================================
# Iteration History
# =============================================================================
iterations:
  # Example iteration entry:
  # - number: 1
  #   timestamp: "2025-01-01T10:00:00Z"
  #   success_rate: 0.80
  #   tests_passed: 20
  #   tests_failed: 5
  #   tests_skipped: 0
  #   duration_seconds: 45.2
  #   changes:
  #     - "initial"
  #   failures:
  #     - test_name: "VER-002"
  #       agent_id: "verification"
  #       failure_type: "assertion"
  #       details: "Expected tool call, got clarification"
  #   improvement_from_previous: null

# =============================================================================
# Prompt Version History
# =============================================================================
prompt_versions:
  # Track which prompt versions were used in each iteration
  # greeting:
  #   iteration_1: v1
  #   iteration_2: v2
  #   iteration_3: v2
  # verification:
  #   iteration_1: v1
  #   iteration_2: v1
  #   iteration_3: v2

# =============================================================================
# Final Results
# =============================================================================
final_results:
  success_rate: null
  tests_passed: null
  tests_failed: null
  total_iterations: null

  # Prompt versions at completion
  final_prompt_versions: {}

  # Remaining failures
  remaining_failures: []

  # Recommendations for improvement
  recommendations: []

# =============================================================================
# Rollback History
# =============================================================================
rollbacks:
  # Track any rollbacks that occurred
  # - iteration: 3
  #   timestamp: "2025-01-01T13:00:00Z"
  #   agent: "verification"
  #   from_version: v3
  #   to_version: v2
  #   reason: "Regression: success rate dropped from 88% to 82%"
