# Voice Agent Workflow Configuration
# Copy this file to your agent directory as workflow_config.yaml

# =============================================================================
# BUILD Phase Configuration
# =============================================================================
build:
  # Validate Python syntax after generation
  validate_syntax: true

  # Generate README.md for the agent
  generate_readme: false

  # Directory structure to create
  directories:
    - sub_agents
    - tools
    - state
    - prompts

# =============================================================================
# TEST Phase Configuration
# =============================================================================
test:
  # Path to reference eval implementation (for copying framework files)
  # Leave empty to use default templates
  reference_eval: ""

  # Minimum test cases per sub-agent
  min_tests_per_agent: 3

  # Generate E2E tests for multi-agent systems
  generate_e2e_tests: true

  # Test tag categories
  tags:
    - unit
    - integration
    - e2e
    - edge-case
    - happy-path

# =============================================================================
# RUN Phase Configuration
# =============================================================================
run:
  # Save results to eval/results/
  save_results: true

  # Results directory (relative to eval/)
  results_dir: results/

  # Timeout per test in seconds
  test_timeout: 30

  # Verbose output during test runs
  verbose: false

  # Continue running tests after failures
  continue_on_failure: true

# =============================================================================
# TUNE Phase Configuration
# =============================================================================
tune:
  # Maximum prompt versions to keep
  max_versions: 5

  # Preserve sections that are working
  preserve_working_sections: true

  # Automatically generate version changelog
  auto_changelog: true

  # Analysis depth: basic, detailed, comprehensive
  analysis_depth: detailed

# =============================================================================
# ITERATE Phase Configuration
# =============================================================================
iterate:
  # Target success rate to achieve (0.0 - 1.0)
  target_success_rate: 0.90

  # Maximum iterations before stopping
  max_iterations: 3

  # Minimum improvement required per iteration (0.0 - 1.0)
  min_improvement: 0.02

  # Iterations without improvement before plateau
  plateau_threshold: 2

  # Automatically rollback on regression
  rollback_on_regression: true

  # Stop on first regression
  stop_on_regression: true

# =============================================================================
# Global Settings
# =============================================================================
global:
  # Log level: debug, info, warning, error
  log_level: info

  # Save iteration history
  save_iteration_log: true

  # Iteration log file (relative to eval/)
  iteration_log_file: results/iteration_log.yaml
