# Critical End-to-End Tests
agent_id: {agent_id}
sub_agent_id: {default_agent}
description: "Critical end-to-end workflow tests"

test_cases:
  - name: "E2E-001: {agent_id} happy path"
    test_type: multi_turn
    tags: [critical, e2e, happy-path]
    turns:
      - user_input: "Hello"
        assertions:
          - type: llm-rubric
            value: "Agent should greet the user appropriately"
      - user_input: "Yes, this is correct"
        assertions:
          - type: llm-rubric
            value: "Agent should acknowledge and proceed with the workflow"
